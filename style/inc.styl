body, html
  background-color: #ffffff;
  margin: 0;
  padding: 0;
  overflow: hidden;
  width: 100%;
  height: 100%;

#container
  display: inline-block;
  position: relative;
  width: 100%;
  height: 100%;

.textdata
  background-color: white;
  position: absolute;
  border-radius: 5px;
  padding: 0px 10px;
  font-family: palatino;

.header
  font-family: helvetica;

#title
  left: 20px;
  top: 25px;


#systeminfo
  left: 20px;
  top: 160px;

#planetinfo
  left: 20px;
  top: 405px;
  position: absolute;

ul#planetmenu, ul#planetmenu ul.planetlist
  padding: 0;
  margin: 0;
  left: 20px;
  top: 120px;

ul#planetmenu li, ul#planetmenu ul.planetlist li
  list-style-type: none;
  display: inline-block;

ul#planetmenu li a, ul#planetmenu li ul.planetlist li a
  text-decoration: none;
  color: #fff;
  background: #666;
  padding: 5px;
  display: inline-block;

ul#planetmenu li
  position: relative;

ul#planetmenu li ul.planetlist
  display: none;
  position: absolute;
  top: 30px;
  left: 0;
  width: 100px;

ul#planetmenu li:hover ul.planetlist
  display: block;
  position: absolute;
  z-index: 1000;